! Blackbox Brueghel Style Collection
!
! The Little Tower of Babel by Brad Hughes
!   works with Blackbox 0.50.x

toolbar:			Raised Vertical Gradient Bevel1
toolbar*color:			rgb:a8/6/0
toolbar*colorTo:		rgb:9a/5/0
toolbar.textColor:		grey85

toolbar.button:			Flat Vertical Gradient
toolbar.label:			Sunken Diagonal Gradient Bevel2
toolbar.clock:			Flat Vertical Gradient
toolbar.button.pressed:		Sunken Vertical Gradient Bevel1

menu.title:			Raised Diagonal Gradient Bevel1
menu.title.color:		rgb:a/a/a
menu.title.colorTo:		rgb:d/d/d
menu.title.textColor:		rgb:9a/5/0
menu.frame:			Sunken Diagonal Gradient Bevel2
menu.frame.color:		rgb:d8/b/0
menu.frame.colorTo:		rgb:a8/6/0
menu.frame.textColor:		grey15
menu.frame.highlightColor:	rgb:9a/5/0
menu.frame.hiTextColor:		white

window.focus:			Raised Diagonal Gradient Bevel1
window.focus.color:		rgb:d8/b/0
window.focus.colorTo:		rgb:a8/6/0
window.focus.textColor:		white
window.focus.button:		Flat Vertical Gradient
window.focus.button.color:	rgb:a8/6/0
window.focus.button.colorTo:	rgb:d8/b/0

window.unfocus:			Raised Diagonal Gradient Bevel1
window.unfocus.color:		rgb:a8/6/0
window.unfocus.colorTo:		rgb:9a/5/0
window.unfocus.textColor:	grey85
window.unfocus.button:		Flat Vertical Gradient
window.unfocus.button.color:	rgb:9a/5/0
window.unfocus.button.colorTo:	rgb:a8/6/0

window.button.pressed:		Sunken Vertical Gradient Bevel2
window.button.pressed.color:	rgb:d8/b/0
window.button.pressed.colorTo:	rgb:7/4/0
window.frame:			Raised Solid Bevel1
window.frame.color:		grey85

borderColor:			rgb:38/2/0

titleFont:			-*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*
menuFont:			-*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*

menuJustify:			CenterJustify
titleJustify:			CenterJustify

moveStyle:			Opaque

bevelWidth:			2
handleWidth:			10

rootCommand:  xv -root -quit -max -smooth :pkgdatadir:/babel.gif

