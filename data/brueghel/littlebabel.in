! Blackbox Brueghel Style Collection
!
! The Little Tower of Babel by Brad Hughes
!   works with Blackbox 0.50.x

toolbar:			Raised Vertical Gradient Bevel1
toolbar*color:			rgb:8/6/6
toolbar*colorTo:		rgb:78/5/5
toolbar.textColor:		grey85

toolbar.button:			Flat Vertical Gradient
toolbar.label:			Sunken Diagonal Gradient Bevel2
toolbar.clock:			Flat Vertical Gradient
toolbar.button.pressed:		Sunken Vertical Gradient Bevel1

menu.title:			Raised Diagonal Gradient Bevel1
menu.title.color:		rgb:a/78/78
menu.title.colorTo:		rgb:4/3/3
menu.title.textColor:		lightgrey
menu.frame:			Raised Diagonal Gradient Bevel1
menu.frame.color:		rgb:a/a/a
menu.frame.colorTo:		rgb:d/d/d
menu.frame.textColor:		grey15
menu.frame.highlightColor:	rgb:8/6/6
menu.frame.hiTextColor:		white

window.focus:			Raised Diagonal Gradient Bevel1
window.focus.color:		rgb:c/9/9
window.focus.colorTo:		rgb:6/4/4
window.focus.textColor:		white
window.focus.button:		Raised Diagonal Gradient Bevel1
window.focus.button.color:	rgb:d/d/d
window.focus.button.colorTo:	rgb:a/a/a

window.unfocus:			Raised Diagonal Gradient Bevel1
window.unfocus.color:		rgb:a/a/a
window.unfocus.colorTo:		rgb:d/d/d
window.unfocus.textColor:	rgb:78/5/5
window.unfocus.button:		Raised Diagonal Gradient Bevel1
window.unfocus.button.color:	grey
window.unfocus.button.colorTo:	darkgrey

window.button.pressed:		Sunken Vertical Gradient Bevel1
window.button.pressed.color:	rgb:a/78/78
window.button.pressed.colorTo:	rgb:6/4/4
window.frame:			Raised Solid Bevel1
window.frame.color:		grey85

borderColor:			rgb:3/2/2

titleFont:			-*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*
menuFont:			-*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*

menuJustify:			CenterJustify
titleJustify:			CenterJustify

moveStyle:			Opaque

bevelWidth:			2
handleWidth:			10

rootCommand:  xv -root -quit -max -smooth :pkgdatadir:/littlebabel.gif

