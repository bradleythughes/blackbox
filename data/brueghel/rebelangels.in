menu.frame:			Raised Diagonal Gradient Bevel1
menu.frame.color:		rgb:c/9/6
menu.frame.colorTo:		rgb:8/6/4
menu.frame.textColor:		grey85
menu.frame.highlightColor:	rgb:68/5/4
menu.frame.hiTextColor:		white

window.focus:			Raised Diagonal Gradient Bevel1
window.focus.color:		rgb:c/9/6
window.focus.colorTo:		rgb:8/6/4
