window.focus:				Raised Vertical   Gradient Bevel1
window.unfocus:				Raised Vertical   Gradient Bevel1
window*button:				Flat   Vertical   Gradient
window*button.pressed:			Inverted
window.frame:				Raised Solid               Bevel1

window.frame.color:			slategrey
window.focus*color:			rgb:c/9/6
window.focus*colorTo:			rgb:8/6/4
