! Title: Orange Noid 

! base toolbar window
toolbar:				Raised Vertical Gradient Bevel1
toolbar.color:				orange
toolbar.colorTo:			orange3
toolbar.textColor:			grey20

! toolbar buttons
toolbar.button:				Flat Vertical Gradient
toolbar.button.color:			orange
toolbar.button.colorTo:			orange3
toolbar.button.pressed:			Inverted
toolbar.button.pressed.color:		orange
toolbar.button.pressed.colorTo:		orange4

! toolbar labels
toolbar.label:				Raised Diagonal Gradient Bevel1
toolbar.label.color:			orange
toolbar.label.colorTo:			orange3

! toolbar clock
toolbar.clock:				Flat Vertical Gradient
toolbar.clock.color:			orange
toolbar.clock.colorTo:			orange3

! menu title
menu.title:				Flat Horizontal Gradient
menu.title.color:			white
menu.title.colorTo:			darkgrey
menu.title.textColor:			grey20

! menu frame
menu.frame:				Raised Diagonal Gradient Bevel1
menu.frame.color:			orange
menu.frame.colorTo:			orange4
menu.frame.highlightColor:		grey20
menu.frame.hiTextColor:			white
menu.frame.textColor:			grey20
menu.bulletStyle:			diamond
menu.bulletPosition:			left

! focused window decorations
window.focus:				Raised Diagonal Gradient Bevel1
window.focus.color:			orange
window.focus.colorTo:			orange3
window.focus.textColor:			grey20
window.focus.button:			Raised Diagonal Gradient Bevel1
window.focus.button.color:		darkgrey
window.focus.button.colorTo:		white

! unfocus window decorations
window.unfocus:				Raised Horizontal Gradient Bevel1
window.unfocus.color:			white
window.unfocus.colorTo:			darkgrey
window.unfocus.textColor:		grey20
window.unfocus.button:			Raised Diagonal Gradient Bevel1
window.unfocus.button.color:		lightgrey
window.unfocus.button.colorTo:		darkgrey

! other window decorations
window.button.pressed:			Sunken Diagonal Gradient Bevel1
window.button.pressed.color:		black
window.button.pressed.colorTo:		white
window.frame:				Raised Solid Bevel1
window.frame.color:			grey85

! border color
borderColor:				grey30

! decoration size control
bevelWidth:				2
handleWidth:				4
borderWidth:				1

! text justification
titleJustify:				CenterJustify
menuJustify:				CenterJustify

! fonts
titleFont:                      -*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*
menuFont:                       -*-lucida-medium-r-*-*-*-120-*-*-*-*-*-*

! command to set root window image/background
rootCommand:			  bsetroot -mod 4 4 -bg darkgrey -fg grey

