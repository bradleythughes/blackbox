! Blackbox window manager resource defaults
! (c) 1997 - 1999 Brad Hughes

!
! Textures may be any combination of:
!	Bevel type:    Raised, Sunken, Flat
!	Texture type:  Solid, Gradient
!	Gradient type: Diagonal, Vertical, Horizontal
!       Bevel option:  Bevel1, Bevel2
!

! toolbar textures
toolbar:				Raised Gradient Vertical   Bevel1
toolbar.label:				Sunken Gradient Vertical   Bevel1
toolbar.button:				Raised Gradient Diagonal   Bevel1
toolbar.button.pressed:			Sunken Gradient Diagonal   Bevel1
toolbar.clock:				Sunken Gradient Vertical   Bevel1

!
! Colors can be any valid X color string.
! See man X(1) for details
!

! toolbar colors
toolbar.color:				slategrey
toolbar.colorTo:			darkslategrey
toolbar.label.color:			slategrey
toolbar.label.colorTo:			darkslategrey
toolbar.button.color:			rgb:c/9/6
toolbar.button.colorTo:			rgb:8/6/4
toolbar.button.pressed.color:		rgb:c/9/6
toolbar.button.pressed.colorTo:		rgb:8/6/4
toolbar.clock.color:			slategrey
toolbar.clock.colorTo:			darkslategrey
toolbar.textColor:			lightgrey

! window textures
window.focus:				Raised Horizontal Gradient Bevel1
window.unfocus:				Raised Horizontal Gradient Bevel1
window.focus.button:			Flat   Vertical   Gradient
window.unfocus.button:			Flat   Vertical   Gradient
window.button.pressed:			Sunken Vertical   Gradient Bevel1
window.frame:				Raised Solid               Bevel1

! window colors
window.focus*color:			rgb:c/9/6
window.focus*colorTo:			rgb:8/6/4
window.focus.textColor:			white
window.unfocus*color:			slategrey
window.unfocus*colorTo:			darkslategrey
window.unfocus.textColor:		darkgrey
window.button.pressed.color:		lightslategrey
window.button.pressed.colorTo:		darkslategrey
window.frame.color:			slategrey

! menu textures
menu.title:				Flat   Vertical   Gradient
menu.frame:				Raised Diagonal   Gradient Bevel1

! menu colors
menu.title.color:			rgb:c/9/6
menu.title.colorTo:			rgb:8/6/4
menu.frame.color:			slategrey
menu.frame.colorTo:			darkslategrey
menu.frame.highlightColor:		rgb:c/9/6
menu.title.textColor:			white
menu.frame.textColor:			lightgrey
menu.frame.hiTextColor:			white

! border color around client windows and menus
borderColor:				darkslategrey

! decoration size controls
bevelWidth:				4
handleWidth:				8

! justification of window titles (centerjustify, leftjustify, or rightjustify)
titleJustify:				centerjustify

! justification of menu frames
menuJustify:				leftjustify

! an Opaque moves will keep the window contents visible during a user move
! a Wire frame move will draw a wire frame and move the window after the user
! has ended the move
moveStyle:			Opaque

! fonts to use for decorations
titleFont:		-adobe-helvetica-medium-r-*-*-*-120-*-*-*-*-*-*
menuFont:		-adobe-helvetica-medium-r-*-*-*-120-*-*-*-*-*-*

rootCommand:			bsetroot -solid darkslategrey

